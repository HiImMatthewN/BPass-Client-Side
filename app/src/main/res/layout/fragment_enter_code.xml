<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:background="@color/pinkDark"
    android:layout_height="match_parent">

    <TextView
        android:fontFamily="@font/main_font"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Verification Code"
        android:textSize="24sp"
        android:gravity="center"
        app:layout_constraintBottom_toTopOf="@id/guideline3"
        app:layout_constraintEnd_toEndOf="parent"
        android:textColor="@color/white"
        app:layout_constraintVertical_bias=".8"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />
    <View
        android:id="@+id/buttonLayoutBg"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:background="@drawable/login_bg"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/guideline3" />
    <TextView
        android:fontFamily="@font/main_font"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:textSize="16sp"
        android:textColor="@color/black"
        android:text="Please enter verification code\nsent to your mobile"
        app:layout_constraintStart_toStartOf="@id/e1"
        app:layout_constraintTop_toTopOf="@id/buttonLayoutBg"
        app:layout_constraintBottom_toTopOf="@id/e1"
        app:layout_constraintEnd_toEndOf="parent"

        />
    <EditText

        android:id="@+id/e1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/border_edittext_bg"
        android:gravity="center"
        android:inputType="number"
        android:minWidth="0dp"
        android:minHeight="0dp"
        android:paddingStart="16dp"
        android:paddingTop="8dp"
        android:paddingEnd="16dp"
        android:paddingBottom="8dp"
        android:hint="—"
        android:maxLength="1"
        android:textSize="32sp"
        app:layout_constraintBottom_toTopOf="@id/guideline2"
        app:layout_constraintEnd_toStartOf="@+id/e2"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintWidth_percent=".2" />

    <EditText
        android:id="@+id/e2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/border_edittext_bg"
        android:gravity="center"
        android:inputType="number"
        android:minWidth="0dp"
        android:minHeight="0dp"
        android:paddingStart="16dp"
        android:paddingTop="8dp"
        android:paddingEnd="16dp"
        android:paddingBottom="8dp"
        android:hint="—"
        android:maxLength="1"


        android:textSize="32sp"
        app:layout_constraintBottom_toTopOf="@id/guideline2"
        app:layout_constraintEnd_toStartOf="@+id/e3"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/e1"
        app:layout_constraintWidth_percent=".2" />

    <EditText
        android:id="@+id/e3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/border_edittext_bg"
        android:gravity="center"
        android:inputType="number"
        android:minWidth="0dp"
        android:minHeight="0dp"
        android:paddingStart="16dp"
        android:paddingTop="8dp"
        android:paddingEnd="16dp"
        android:paddingBottom="8dp"
        android:hint="—"
        android:textSize="32sp"
        app:layout_constraintBottom_toTopOf="@id/guideline2"
        android:maxLength="1"

        app:layout_constraintEnd_toStartOf="@+id/e4"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/e2"
        app:layout_constraintWidth_percent=".2" />

    <EditText
        android:id="@+id/e4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/border_edittext_bg"
        android:gravity="center"
        android:inputType="number"
        android:minWidth="0dp"
        android:minHeight="0dp"
        android:paddingStart="16dp"
        android:paddingTop="8dp"
        android:paddingEnd="16dp"
        android:paddingBottom="8dp"
        android:hint="—"
        android:maxLength="1"

        android:textSize="32sp"
        app:layout_constraintBottom_toTopOf="@id/guideline2"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/e3"
        app:layout_constraintWidth_percent=".2" />

    <EditText
        android:id="@+id/e5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/border_edittext_bg"
        android:gravity="center"
        android:inputType="number"
        android:minWidth="0dp"
        android:minHeight="0dp"
        android:paddingStart="16dp"
        android:paddingTop="8dp"
        android:paddingEnd="16dp"
        android:paddingBottom="8dp"
        android:hint="—"
        android:maxLength="1"

        android:textSize="32sp"
        android:layout_marginTop="16dp"
        app:layout_constraintEnd_toEndOf="@id/e2"
        app:layout_constraintHorizontal_chainStyle="packed"
        app:layout_constraintStart_toStartOf="@id/e2"
        app:layout_constraintTop_toBottomOf="@id/guideline2"
        app:layout_constraintWidth_percent=".2" />

    <EditText
        android:id="@+id/e6"
        android:layout_marginTop="16dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/border_edittext_bg"
        android:gravity="center"
        android:inputType="number"
        android:minWidth="0dp"
        android:minHeight="0dp"
        android:paddingTop="8dp"
        android:paddingStart="16dp"
        android:paddingEnd="16dp"
        android:paddingBottom="8dp"
        android:hint="—"
        android:maxLength="1"

        android:textSize="32sp"
        app:layout_constraintEnd_toEndOf="@id/e3"
        app:layout_constraintStart_toStartOf="@id/e3"
        app:layout_constraintTop_toBottomOf="@id/guideline2"
        app:layout_constraintWidth_percent=".2" />

    <androidx.appcompat.widget.AppCompatButton
        android:fontFamily="@font/main_font"
        android:id="@+id/verifyBtn"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:background="@drawable/circular_button_bg_pink"
        android:text="Verify"
        android:translationZ="4dp"
        app:layout_constraintVertical_bias=".3"
        android:textColor="@color/white"
        app:layout_constraintTop_toBottomOf="@id/e5"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintWidth_percent=".75" />

    <ProgressBar

        android:id="@+id/progressBar"
        android:translationZ="4dp"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:indeterminate="true"
        android:visibility="invisible"
        android:layout_margin="8dp"
        android:indeterminateTint="@color/white"
        app:layout_constraintTop_toTopOf="@id/verifyBtn"
        app:layout_constraintEnd_toEndOf="@id/verifyBtn"
        app:layout_constraintStart_toStartOf="@id/verifyBtn"
        app:layout_constraintBottom_toBottomOf="@id/verifyBtn"
        />
    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideline3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent=".25" />
    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideline2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent=".5" />
</androidx.constraintlayout.widget.ConstraintLayout>